<h2>Editing: {{movie.title}}</h2>
<form action="/movies/{{movie._id}}/edit" method="POST">
  <label for="">Title:
    <input type="text" name="title" value="{{movie.title}}" />
  </label>
  <br />
  <label for="">Genre:
    <input type="text" name="genre" value="{{movie.genre}}" />
  </label>
  <br />
  <label for="">Plot:
    <input type="text" name="plot" value="{{movie.plot}}" />
  </label>
  <br />
  <label for="">Cast:
    <select type="text" name="cast" multiple>
      {{#each celebrities}}
        <option value="{{_id}}">
          {{name}}
        </option>
      {{/each}}
    </select>
  </label>
  <br />
  <button type="submit"> Save Changes</button>
  <br />
</form>